@{
    ViewData["title"] = "Libraries Gallery";
    var products = (List<Product>?) ViewData["products"];
}

<div class="d-flex justify-content-between my-5">
    <h4>Hello</h4>

    <img height="30" width="30" src="/images/shopping-cart.png" alt="Shopping Cart">
</div>

<div class="mb-5">
    <input class="w-100 px-4 py-2" type="text" placeholder="Search">
</div>

<div class="container">
    <div class="row">
        @if (products != null)
        {
             @foreach (var product in products)
            {
                <div class="col-4 mb-5">
                    <div class="card">
                        <img height="300" width="300" class="card-img-top" src="@product.imageUrl" alt="Card image cap">
                        
                        <div class="card-body">
                            <h5 class="card-title">@product.name</h5>
                            <p class="card-text">@product.description</p>
                            
                            <button class="btn btn-primary w-100">$ @product.price - Add to Cart</button>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>