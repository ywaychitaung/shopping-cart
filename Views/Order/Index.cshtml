@{
    ViewData["title"] = "Purchase History";
    var user = ViewBag.user;
    var orders = (List<Order>?) ViewBag.orders;
    var codes = (List<ActivationCode>?) ViewBag.codes;  
}

<div class="d-flex align-items-center">
    <h3 class="me-5">My Purchases</h3>

    <a asp-controller="Product" asp-action="Index">
        Home
    </a>

    <div class="vertical-line mx-3"></div>

    <a asp-controller="Logout" asp-action="Index">
        Logout
    </a>
</div>

@{int i = 0;}
    @foreach(var order in orders)
    {
        <div class="d-flex align-items-center mt-5">
            <div class="col-3 me-5">
                <div class="card">
                    <img height="300" width="300" class="card-img-top" src="/images/net-charts.png" alt="@order.Name">
                    
                    <div class="card-body">
                        <h5 class="card-title">@order.Name</h5>
                        <p class="card-text">@order.Description</p>
                        
                        <button type="submit" class="btn btn-primary w-100">Download</button>
                    </div>
                </div>
            </div>

            <div>
                <div class="d-flex">
                    <p>Purchase On:</p>
                    <p>@order.OrderDate</p>
                </div>

                <div class="d-flex">
                    <p>Quantity:</p>
                    <p>@order.Quantity</p>
                </div>

                @if (@order.Quantity == 1)
                {
                    <div class="d-flex">
                        <p>Activation Code:</p>

                        @if (order.OrderId != codes[i].OrderId || order.OrderDate != codes[i].OrderDate || order.ProductId != codes[i].ProductId)
                        {
                            i++;
                        }

                        <p>@codes[i].Code</p>
                    </div>
                }
                else
                {
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @codes[i].Code
                        </button>

                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            @{int temp = i+1;}
                            @for (int x = 0; x < @order.Quantity - 1; x++)
                            {
                                <p>@codes[temp].Code</p>
                                temp++;
                            }
                        </div>
                    </div>
                }
            </div>
        </div>

        i++;
    }